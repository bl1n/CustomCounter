<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <team.lf.task423.CompositeView
        android:id="@+id/comp_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:count="3"
        app:total="10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/add"
        android:layout_width="75dp"
        android:layout_height="45dp"
        android:layout_marginStart="96dp"
        android:text="+"
        app:layout_constraintBottom_toTopOf="@+id/comp_view"
        app:layout_constraintEnd_toEndOf="@+id/comp_view"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/comp_view" />

    <Button
        android:id="@+id/sub"
        android:layout_width="75dp"
        android:layout_height="45dp"
        android:layout_marginStart="96dp"
        android:text="-"
        app:layout_constraintEnd_toEndOf="@+id/comp_view"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/comp_view"
        app:layout_constraintTop_toBottomOf="@+id/comp_view" />

</androidx.constraintlayout.widget.ConstraintLayout>